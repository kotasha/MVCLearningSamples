@helper RenderCustomers(IEnumerable<Kotacs.Libraries.SOA.Contracts.Data.Customer> customers)
{
    <table border="1">
        <thead>
            <tr><th>
                Customer #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Details
                </th>
                
            </tr>
        </thead>
        <tbody>
                    @foreach(var customer in customers)
                    {
                        @RenderCustomer(customer)
                    }
                </tbody>
    </table>
        
}
@helper RenderCustomer(Kotacs.Libraries.SOA.Contracts.Data.Customer customer)
    {
        <tr>
            <td>
                @customer.Customerid
            </td>
            <td>
                @customer.CustomerName
            </td>
            <td>
                @customer.Address
            </td>
            <td><a data-ajax="true" data-ajax-begin="handleBegin" data-ajax-method="GET"
            data-ajax-success="handleSuccess2" href="/Customer/CustomerDetails?customerId=@customer.Customerid">Details</a>
            </td>
        </tr>
    
    }
